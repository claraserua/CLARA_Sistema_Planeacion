@{
	// ________________________________ NOMINA EXCEL ________________________________

	ViewBag.Title = "Start";
}

<div class="row">
	<ol class="breadcrumb pull-right">
		<li><a href="#">Pagos</a></li>
		<li><a href="/NominaExcel">Importar Nomina (Excel)</a></li>

	</ol>
</div>



<!-- begin row -->
<div class="row">
	<!-- begin col-12 -->
	<div class="col-md-12 ui-sortable">
		<!-- begin panel -->
		<div class="panel panel-inverse">
			<div class="panel-heading">
				<div class="panel-heading-btn">

					<a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
					<a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

				</div>
				<h4 class="panel-title">Base para la generación de pagos</h4>
			</div>

			<div class="panel-body">

				<form action="/NominaExcel/SendFile" method="POST" enctype="multipart/form-data">
					<!--
		<form action="/" method="POST" onload="formPage.clean();">
		-->
					<fieldset>

						<div class="row">
							<div class="col-md-3">
								<div class="form-group">
									<label for="role">Ciclos *</label>
									<select id="ciclos" class="form-control"></select>


								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="descripcion">Periodos</label>
									<select id="periodos" class="form-control"></select>
								</div>
							</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="descripcion">Niveles</label>
									<select id="niveles" class="form-control"></select>
								</div>
							</div>
							<!--
							<div class="col-md-4">
								<div class="form-group">
									<label for="descripcion">Realiza transferencias bancarias *</label>
									<select id="Transferencias" style="width:70px;" class="form-control">
										<option value="No">No</option>
										<option value="Si">Si</option>
									</select>
								</div>
							</div>
							-->
						</div>

						<div class="row">
							<div class="col-md-6">
								<label for="file">Filename:</label>
								<input type="file" name="file" id="file" class="form-control"/>
							</div>
							<div class="col-md-3">
								<div id="div_progressbar">
									<label for="file">Progreso:&nbsp;</label><label for="file" id="div_percentage_id">0 %</label>
									<progress id="progressbar_loading" value="0" max="100" />
								</div>
							</div>
							<div class="col-md-3">
								<div class="row right">
									<br /><br />
									<input type="submit" id="formbtnEnviar" class="btn btn-sm btn-primary" onclick="formPage.subirExcel();" value="Enviar archivo">
									<button type="button" id="formbtnImportar" class="btn btn-sm btn-success" onclick="formPage.importar();">Importar</button>
								</div>
							</div>

						</div>

						@Html.Raw(ViewBag.BlockingPanel_1)
					</fieldset>

				</form>

			</div>
		</div>
		<!-- end panel -->
	</div>
	<!-- end col-12 -->
</div>
<!-- end row -->
<!-- begin row -->
<div class="row">
	<!-- begin col-12 -->
	<div class="col-md-12 ui-sortable">
		<!-- begin panel -->
		<div class="panel panel-inverse">
			<div class="panel-heading">
				<div class="panel-heading-btn">

					<a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
					<a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

				</div>
				<h4 class="panel-title">Listado de Menus</h4>
			</div>
			<div class="panel-body">

				<div id="datatable">
					@Html.Raw(ViewBag.DataTable)
				</div>

			</div>
		</div>
		<!-- end panel -->
	</div>
	<!-- end col-12 -->
</div>
<!-- end row -->
