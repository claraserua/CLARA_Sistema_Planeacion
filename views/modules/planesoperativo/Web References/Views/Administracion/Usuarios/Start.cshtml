
@{
    ViewBag.Title = "Start";
}

<!-- begin row Formulario -->
<div class="row" id="frm-usuarios">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">

                    <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

                </div>
                <h4 class="panel-title">Detalle Usuario</h4>
            </div>

            <div class="panel-body">

                <ul class="nav nav-tabs">
                    <li class="active"><a href="#default-tab-1" data-toggle="tab" aria-expanded="true">Datos Personales</a></li>
                    <li class=""><a href="#default-tab-2" data-toggle="tab" aria-expanded="false">Cuenta</a></li>
                    <li class=""><a href="#default-tab-3" data-toggle="tab" aria-expanded="false">Disponibilidad</a></li>
                    <li class=""><a href="#default-tab-4" data-toggle="tab" aria-expanded="false">Institución</a></li>
                    <li class=""><a href="#default-tab-5" data-toggle="tab" aria-expanded="false">Roles del Sistema</a></li>
                </ul>

                <div class="tab-content" id="tabs">
                    <div class="tab-pane fade active in" id="default-tab-1">
                        <fieldset>
                            <legend>Información Personal</legend>
                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Nombre">Nombre(s) *</label>
                                        <input type="text" class="form-control" id="Nombre">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="APaterno">Apellido Paterno *</label>
                                        <input type="text" class="form-control" id="APaterno">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="AMaterno">Apellido Materno *</label>
                                        <input type="text" class="form-control" id="AMaterno">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>


                    <div class="tab-pane fade" id="default-tab-2">
                        <fieldset>
                            <legend>Información de cuenta</legend>
                            <div class="row">
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Usuario">Usuario *</label>
                                        <input type="text" class="form-control" id="Usuario">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Password">Password *</label>
                                        <input type="password" class="form-control" id="Password">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Password_2">Confirmar Password *</label>
                                        <input type="password" class="form-control" id="Password_2">
                                    </div>
                                </div>
                            </div>

                        </fieldset>

                    </div>


                    <div class="tab-pane fade" id="default-tab-3">
                        <fieldset>
                            <legend>Disponibilidad</legend>
                            <div class="row">
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Habilitado</label>
                                        <input type="radio" class="radio20" name="disponible" value="1">
                                        <label>Deshabilitado</label>
                                        <input type="radio" class="radio20" name="disponible" value="0">
                                    </div>
                                </div>

                            </div>

                        </fieldset>
                    </div>


                    <div class="tab-pane fade" id="default-tab-4">
                        <fieldset>
                            <legend>Nivel Institucional</legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Jerarquia">Seleccione la SEDE principal al que pertenece el usuario dentro de la jerarquia institucional:</label>

                                        @Html.Raw(ViewBag.Jerarquias)

                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Jerarquia">Seleccione las SEDES de acceso que desea agregar al usuario dentro de la jerarquía institucional:</label>
                                        
                                        @Html.Raw(ViewBag.JerarquiasUser)


                                    </div>
                                     
                                </div>

                            </div>

                        </fieldset>
                    </div>


                    <div class="tab-pane fade" id="default-tab-5">
                        <fieldset>
                            <legend>Rol de Sistema</legend>
                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="sel1">Roles Disponibles</label>
                                        <select id="sel1" name="sel1" multiple="multiple" size="5" style="width:300px; height:150px;">
											
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4" style="text-align:center; margin-top:8%;">
                                    <div class="form-group">
                                        <a href="javascript:formPage.setRoles()" class="btn btn-sm btn-default"> Agregar <i class="fa fa-hand-o-right" aria-hidden="true"></i></a>
                                        <a href="javascript:formPage.quitRoles()" class="btn btn-sm btn-default"><i class="fa fa-hand-o-left" aria-hidden="true"></i> Eliminar</a>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="sel2">Roles Selecciosnados</label>
                                        <select id="sel2" name="sel2" size="5" multiple="multiple" style="width:300px; height:150px;">
											
											@Html.Raw(ViewBag.Roles)

                                        </select>
                                    </div>
                                </div>



                               
                            </div>
                     </fieldset>
                    </div>


                    <div class="row right">
                        <button type="button" id="formbtnadd" class="btn btn-sm btn-primary" onclick="formPage.add();">Agregar</button>
                        <button type="button" id="formbtnsave" class="btn btn-sm btn-primary" disabled onclick="formPage.save();">Guardar</button>
                        <button type="button" id="formbtndelete" class="btn btn-sm btn-danger" disabled onclick="formPage.delete(false);">Borrar</button>
                        <button type="button" id="formbtnclean" class="btn btn-sm btn-warning" onclick="formPage.clean();">Limpiar</button>
                    </div>

                </div>





            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->
<!-- begin row Datatable -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">

                    <a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
                    <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

                </div>
                <h4 class="panel-title">Listado de Usuarios</h4>
            </div>
            <div class="panel-body">

                <div id="datatable">
                    @Html.Raw(ViewBag.DataTable)
                </div>

            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->
<!-- #modal-dialog CONFIRM DELETE BANCO -->
<div class="modal fade" id="modal-delete-usuario">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Eliminar Usuario</h4>
            </div>
            <div class="modal-body">
                Se eliminara el Usuario seleccionado, ¿esta seguro de proceder?
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                <a href="javascript:formPage.delete(true);" class="btn btn-sm btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>