
@{
    ViewBag.Title = "Start";
}

<!-- begin row Formulario -->
<div class="row" id="frm-importar">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">

                    <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

                </div>
                <h4 class="panel-title">Detalle de pagos</h4>
            </div>

            <div class="panel-body">


                <form action="/" method="POST">
                    <fieldset>

                        <legend class="pull-left width-full small"><span id="titulo-legend">Utilice esta pantalla para consultar los pagos de un profesor en base a los filtros disponibles. <a href="javascript:void(0)" onclick="ayuda('detallepagos.html')">Más ayuda.</a></span></legend>

                        <div class="row">

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="ciclos">Año Escolar</label>
                                    <select id="ciclos" class="form-control" >  
                                                                          
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="periodos">Periodo</label>
                                    <select id="periodos" class="form-control"></select>
                                </div>
                            </div>


                            <!--<div class="col-md-2">
                                <div class="form-group">
                                    <label for="niveles">Nivel</label>
                                    <select id="niveles" class="form-control"></select>
                                </div>
                            </div>-->


                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="escuelas">Escuela</label>
                                    <select id="escuelas" class="form-control"></select>
                                </div>
                            </div>


                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="tipospago">Tipos de Pago</label>
                                    <select id="tipospago" class="form-control">
                                    
                                    </select>
                                </div>
                            </div>

                                               

                             






                        </div>
                        <br />


                        <div class="row right">
                            <button type="button" id="formbtnconsultar" class="btn btn-sm btn-primary" onclick="formPage.Concultar();">Consultar</button>
                            <button type="button" id="formbtnclean" class="btn btn-sm btn-warning" onclick="formPage.clean();">Limpiar</button>

                         
                        </div>




                    </fieldset>
                </form>



            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->
<!-- begin row Datatable -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">

                    <a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
                    <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

                </div>
                <h4 class="panel-title">Listado de Pagos Disponible<span class="loader-min-bar" style="display: none;"></h4>
            </div>
            <div class="panel-body">

                <div id="datatable">
                    @Html.Raw(ViewBag.DataTable)
                </div>

            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->
<!-- #modal-dialog CONFIRM DELETE ESQUEMA -->
<div class="modal fade" id="modal-delete-esquemas">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Eliminar Esquema</h4>
            </div>
            <div class="modal-body">
                Se eliminara el Esquema seleccionado, ¿esta seguro de proceder?
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                <a href="javascript:formPage.delete(true);" class="btn btn-sm btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>


