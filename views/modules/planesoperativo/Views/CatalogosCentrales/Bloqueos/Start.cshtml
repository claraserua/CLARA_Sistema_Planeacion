
@{
    ViewBag.Title = "Start";
}

<div class="row" id="frm-bloqueos">
    <ol class="breadcrumb pull-right">
        <li><a href="#">Catalogos Centrales</a></li>            
        <li><a href="#">Bloqueos</a></li>
    </ol>
</div>
    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12 ui-sortable">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>
                    </div>
                    <h4 class="panel-title">Detalle Bloqueo</h4>
                </div>
                <div class="panel-body">
                    <form action="/" method="POST">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label for="Cve_Bloqueo">Clave *</label>
                                        <input type="text" class="form-control" id="Cve_Bloqueo" maxlength="3">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Bloqueo">Bloqueo *</label>
                                        <input type="text" class="form-control" id="Bloqueo" maxlength="25">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="BloqueoDescripcion">Descripción *</label>
                                        <input type="text" class="form-control" id="BloqueoDescripcion" maxlength="250">
                                    </div>
                                </div>
								<div class="col-md-5">

									<label>&nbsp;</label>

									<div class="form-group">
										<label class="checkbox-inline">
											<input type="checkbox" id="EstadoCuenta"> Estado de cuenta
										</label>
										<label class="checkbox-inline">
											<input type="checkbox" id="Factura"> Factura
										</label>
										<label class="checkbox-inline">
											<input type="checkbox" id="Pagos"> Pagos
										</label>
									</div>

								</div>
                            </div>
                                <div class="row right">
                                    <button type="button" id="formbtnadd" class="btn btn-sm btn-primary" onclick="formPage.add();">Agregar</button>
                                    <button type="button" id="formbtnsave" class="btn btn-sm btn-primary" disabled onclick="formPage.save();">Guardar</button>
                                    <button type="button" id="formbtndelete" class="btn btn-sm btn-danger" disabled onclick="formPage.delete();">Borrar</button>
                                    <button type="button" id="formbtnclean" class="btn btn-sm btn-warning" onclick="formPage.clean();">Limpiar</button>
                                </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
 <!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
                    <a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>
                </div>
                <h4 class="panel-title">Listado de Bloqueos</h4>
            </div>
            <div class="panel-body">
                <div id="datatable">
                    @Html.Raw(ViewBag.DataTable)
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->

<!-- #modal-dialog CONFIRM DELETE -->
<div class="modal fade" id="modal-delete-bloqueos">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Eliminar Bloqueo</h4>
            </div>
            <div class="modal-body">
                Se eliminara el Bloqueo seleccionado, ¿esta seguro de proceder?
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                <a href="javascript:formPage.delete(true);" class="btn btn-sm btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>