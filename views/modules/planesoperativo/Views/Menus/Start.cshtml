@{
	// ________________________________ MENUS ________________________________

	ViewBag.Title = "Start";
}

<div class="row">
	<ol class="breadcrumb pull-right">
		<li><a href="#">Administración</a></li>
		<li><a href="/Menus">Menus</a></li>

	</ol>
</div>



<!-- begin row -->
<div class="row">
	<!-- begin col-12 -->
	<div class="col-md-12 ui-sortable">
		<!-- begin panel -->
		<div class="panel panel-inverse">
			<div class="panel-heading">
				<div class="panel-heading-btn">

					<a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
					<a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

				</div>
				<h4 class="panel-title">Ficha</h4>
			</div>

			<div class="panel-body">



				<form action="/" method="POST" onload="formPage.clean();">
					<fieldset>

						<div class="row">

							<div class="col-md-4">
								<div class="form-group">
									<label for="Nombre">Nombre</label>
									<input type="text" class="form-control" id="Nombre">
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="descripcion">Descripción</label>
									<input type="text" class="form-control" id="Descripcion">
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="Url">Url</label>
									<input type="text" class="form-control" id="Url">
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="Padre">Padre</label>
									<!--
									<input type="text" class="form-control" id="Padre">
										-->
									<select id="Padre" class="form-control">
										@Html.Raw(ViewBag.PadreOptionsHTML)
									</select>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="Orden">Orden</label>
									<!--
									<input type="text" class="form-control" id="Orden">
										-->
									<select id="Orden" class="form-control">
										@Html.Raw(ViewBag.OrdenOptionsHTML)
									</select>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="PkPermiso">id permiso</label>
									<!--
									<input type="text" class="form-control" id="PkPermiso">
										-->
									<select id="PkPermiso" class="form-control">
										@Html.Raw(ViewBag.PkPermisoOptionsHTML)
									</select>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label for="Icono" id="IconoMuestra">Icono</label>
									<input type="text" class="form-control" id="Icono" onchange="formPage.Icono_OnChange();" onkeyup="formPage.Icono_OnChange();">
								</div>
							</div>

						</div>

						<div class="row right">
							<button type="button" id="formbtnadd" class="btn btn-sm btn-primary" onclick="formPage.add();">Agregar</button>
							<button type="button" id="formbtnsave" class="btn btn-sm btn-success" onclick="formPage.save();">Guardar</button>
							<button type="button" id="formbtndelete" class="btn btn-sm btn-danger" onclick="formPage.delete();">Borrar</button>
							<button type="button" id="formbtnclean" class="btn btn-sm btn-warning" onclick="formPage.clean();">Limpiar</button>
						</div>
					</fieldset>
				</form>



			</div>
		</div>
		<!-- end panel -->
	</div>
	<!-- end col-12 -->
</div>
<!-- end row -->
<!-- begin row -->
<div class="row">
	<!-- begin col-12 -->
	<div class="col-md-12 ui-sortable">
		<!-- begin panel -->
		<div class="panel panel-inverse">
			<div class="panel-heading">
				<div class="panel-heading-btn">

					<a data-click="panel-reload" class="btn btn-xs btn-icon btn-circle btn-success" href="javascript:;"><i class="fa fa-repeat"></i></a>
					<a data-click="panel-collapse" class="btn btn-xs btn-icon btn-circle btn-warning" href="javascript:;"><i class="fa fa-minus"></i></a>

				</div>
				<h4 class="panel-title">Listado de Menus</h4>
			</div>
			<div class="panel-body">

				<div id="datatable">
					@Html.Raw(ViewBag.DataTable)
				</div>

			</div>
		</div>
		<!-- end panel -->
	</div>
	<!-- end col-12 -->
</div>
<!-- end row -->

<!-- #modal-dialog CONFIRM DELETE -->
<div class="modal fade" id="modal-delete">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Eliminar el tabulador</h4>
			</div>
			<div class="modal-body">
				Se eliminara el tabulador seleccionado. ¿Esta seguro?
			</div>
			<div class="modal-footer">
				<a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
				<a href="javascript:formPage.delete(true);" class="btn btn-sm btn-danger">Eliminar</a>
			</div>
		</div>
	</div>
</div>

